<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Config 3.0//EN" 
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.yc.weixin.bean.FollowPushMessageMapper">
 
  <!-- 加入带日志的ehcahe缓存 -->
 <cache type="org.mybatis.caches.ehcache.LoggingEhcache">
 </cache>
 

	
 <select id="findAllFollowPush"  resultType="FollowPushMessage" parameterType="map">
 select  fid,ftitle,fpic,fcontent,lastmodify,lastmodifytime,isfollowpush from followpush where 1=1

 
		<if  test="start!=null">
		limit #{start},#{pagesize}
		</if>
	
 

 
 </select>
 
 	<select id="findFollowPushCount"   resultType="int">
	select count(1) from followpush where 1=1
	</select>
 
 </mapper>